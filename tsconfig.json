{
	"include": [
		"src"
	],
	"exclude": [
		"node_modules/*"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"app": ["src/*"],
			"components": ["src/components"],
		},
		"module": "esnext",
		"target": "esnext",
		"types": [
			"svelte",
			"jest"
		],
		"moduleResolution": "node",
		"strict": true,
		"resolveJsonModule": true
	},
}
